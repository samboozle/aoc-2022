<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="solution-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :language %>
    <%= text_input f, :language %>
    <%= error_tag f, :language %>
  
    <%= label f, :code %>
    <%= textarea f, :code %>
    <%= error_tag f, :code %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
